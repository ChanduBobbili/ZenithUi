{
	"compilerOptions": {
		"lib": ["DOM", "ES2021"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"declaration": true,
		"types": ["jest"],
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["tests", "**/*.test.ts", "**/__tests__/**"]
}
