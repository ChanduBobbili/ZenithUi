{
  "name": "@zenithui/toast",
  "version": "1.0.0",
  "private": false,
  "description": "A modern, lightweight toast notification system for React applications. ZenithUI Toast provides a simple and customizable way to display notifications, alerts, and messages to users with smooth animations and flexible styling options.",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rslib build",
    "build:storybook": "storybook build",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "prettier --write .",
    "clean": "rm -rf dist && rm -rf storybook-static",
    "lint": "eslint .",
    "storybook": "storybook dev"
  },
  "dependencies": {
    "@zenithui/utils": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.21.0",
    "@rsbuild/core": "~1.2.19",
    "@rsbuild/plugin-react": "^1.1.1",
    "@rsbuild/plugin-svgr": "^1.0.7",
    "@rslib/core": "^0.5.5",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-interactions": "^8.6.7",
    "@storybook/addon-links": "^8.6.7",
    "@storybook/addon-onboarding": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.12",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "storybook": "^8.6.7",
    "storybook-addon-rslib": "^1.0.0",
    "storybook-react-rsbuild": "^1.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^17.0.0",
    "react-dom": "^18.0.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "zenithui",
    "accessible",
    "design-system",
    "styled-components",
    "styled-system",
    "typescript",
    "toast"
  ],
  "homepage": "https://zenithui-docs.vercel.app/",
  "bugs": {
    "url": "https://github.com/ChanduBobbili/ZenithUi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChanduBobbili/ZenithUi.git#main"
  },
  "license": "MIT",
  "author": "Chandu Bobbili <chandubobbili12@gmail.com> (https://github.com/ChanduBobbili)",
  "packageManager": "pnpm@9.5.0"
}
