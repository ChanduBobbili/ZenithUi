{
  "name": "zenithui-primitive",
  "version": "0.4.3",
  "description": "A ZenithUi React component library containing primitive UI components.",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "author": {
    "name": "Chandu Bobbili",
    "email": "chandubobbili12@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChanduBobbili/ZenithUi/tree/main/packages/zenithui-primitive"
  },
  "bugs": {
    "url": "https://github.com/ChanduBobbili/ZenithUi/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "zenithui",
    "accessible",
    "design-system",
    "styled-components",
    "styled-system",
    "tailwindcss",
    "typescript"
  ],
  "packageManager": "pnpm@9.5.0",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build && tsc",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --max-warnings 0 --fix",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^17.0.0",
    "react-dom": "^18.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-lib-inject-css": "^2.2.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-toggle-group": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "vaul": "^1.1.2"
  }
}
